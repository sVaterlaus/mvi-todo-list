{
    "extends": [
        "airbnb-base",
        "plugin:fp/recommended"
    ],
    "plugins": [
        "fp"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "no-console": 0,
        "max-len": [
            2,
            {
                "code": 120
            }
        ],
        "fp/no-mutation": [
            2,
            {
                "commonjs": true
            }
        ],
        "fp/no-unused-expression": 0
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true
    }
}