{
    "extends": [
        "airbnb-base",
        "plugin:fp/recommended"
    ],
    "plugins": [
        "fp",
        "react"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "max-len": [
            2,
            {
                "code": 120
            }
        ],
        "fp/no-mutation": [
            2,
            {
                "commonjs": true
            }
        ],
        "fp/no-unused-expression": 0,
        "fp/no-nil": 0,
        "fp/no-rest-parameters": 0,
        "react/jsx-uses-vars": 2
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true
    }
}